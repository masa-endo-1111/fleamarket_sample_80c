
.card
  .card__page
    .header
    .card__main
      .card__content
        %section.payment
          %h2.payment__title
            支払い方法
        = form_tag(pays_path, method: :post, id: 'charge-form',  name: "inputForm",) do
          .payment__back
            %section.payment__center
              .card__number
                .sub__title
                  %label カード番号 
                  %span.style__tag 
                    必須
                .card__info
                  .card__input
                    = text_field_tag "number", "", class: "card__number__info", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
                    = image_tag "visa.svg", class:"card__type"
                    = image_tag "mastercard.svg", class:"card__type"
                    = image_tag "saison.svg", class:"card__type"
                    = image_tag "jcb.svg", class:"card__type"
                    = image_tag "american_express.svg", class:"card__type"
                    = image_tag "dinersclub.svg", class:"card__type"
                    = image_tag "discover.svg", class:"card__type"
              .card__expiration
                .sub__title
                  %label 有効期限
                  %span.style__tag 
                    必須
                .expiration__day
                  .expiration__day__select
                    .select__style
                      %select#exp_month{name: "exp_month", type: "text"}
                        %option{value: "1"}01
                        %option{value: "2"}02
                        %option{value: "3"}03
                        %option{value: "4"}04
                        %option{value: "5"}05
                        %option{value: "6"}06
                        %option{value: "7"}07
                        %option{value: "8"}08
                        %option{value: "9"}09
                        %option{value: "10"}10
                        %option{value: "11"}11
                        %option{value: "12"}12
                      %span 月
                      %select#exp_year{name: "exp_year", type: "text"}
                        %option{value: "2020"}20
                        %option{value: "2021"}21
                        %option{value: "2022"}22
                        %option{value: "2023"}23
                        %option{value: "2024"}24
                        %option{value: "2025"}25
                        %option{value: "2026"}26
                        %option{value: "2027"}27
                        %option{value: "2028"}28
                        %option{value: "2029"}29
                      %span 年
              .card__security
                .sub__title
                  %label セキュリティコード
                  %span.style__tag 
                    必須
                .security__box
                  .security__box__input
                    = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                .card__question
                  .card__question__content
                    -# %span ?
                    -# カード裏面の番号とは？
              #card_token
              = submit_tag "登録する", id: "token_submit", class: "card__button"
              %a{ href: '#', class: 'back__button' }
                もどる
    .footer
