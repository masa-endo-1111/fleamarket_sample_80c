.exhibition
  .exhibition--top
    %a.top--picture
      = image_tag src="/assets/logo.png", size: "185x49", class: "exhibition--pic"
  .exhibition--main
    .exhibition--content
      .back
      %form{:action => "#", :method => "post",class:"form"}
        .back
        .form--image
          .form--style
            .form--style__body
              %name.photos
                .style
                  %label
                    出品画像
                  %span.style--tag 
                    必須
              %p.photo--comment
                最大10枚までアップロードできます
              .photo--box
                .box--content
                  %tabindex.tab
                    .tab--box
                      %input.tab--file{:type => "file"}/
                      %i.fa.fa-camera
                      %p.box--comment
                        ドラッグアンドドロップ
                        %br
                        またはクリックしてファイルをアップロード
        %hr.border
        .product
          .product--top
            .product--body
              %name.product--name 
                .style
                  %label 
                    商品名
                  %span.style--tag 
                    必須
              .product--name__box
                .name--area
                  %input{:name => "name", :placeholder => "40文字まで", :type => "text", :value => ""}/
          .product--introduction
            .product--introduction__style
              %name.description
                .style
                  %label 
                    商品の説明
                  %span.style--tag 
                    必須
                %textarea.description--box{:name => "description", :placeholder => "商品の説明（必須 1,000文字以内）\n（色、素材、重さ、定価、注意点など）\n\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。\n          ", :rows => "7"}

              .style--counter
                %span 0/1000
        %hr.border
        .product
          %p 
            商品の詳細
          .menu
            .menu--body
              %name.detail--category
                .style
                  %label
                    カテゴリー
                  %span.style--tag 
                    必須
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "選択してください", :type => "text", :class => "select--box"}/
          .menu
            .menu--body
              %name.detail--category
                .styleB
                  %label
