.exibition
  .exibition--top
    %a.top--picture
      = image_tag src="/assets/logo.png", size: "185x49", class: "exibition--pic"
  .exibition--main
    .exibition--content
      .back
      %form{:action => "#", :method => "post",class:"form"}
        .back
        .form--image
          .form--style
            .form--style__body
              %name.photos
                .style
                  %label
                    出品画像
                  %span.style--tag 
                    必須
              %p.photo--comment
                最大10枚までアップロードできます
              .photo--box
                .box--content
                  %tabindex.tab
                    .tab--box
                      %input.tab--file{:type => "file"}/
                      %p.box--comment
                        ドラッグアンドドロップ
                        %br
                        またはクリックしてまたはクリックしてファイルをアップロード
        %hr.border
        .product
          .product--top
            .product--body
              %name.product--name 
                .style
                  %label 
                    商品名
                  %span.style--tag 
                    必須
              .product--name__box
                .name--area
                  %input{:name => "name", :placeholder => "40文字まで", :type => "text", :value => ""}/
          .product--introduction
            .product--introduction__style
              %name.description
                .style
                  %label 
                    商品の説明
                  %span.style--tag 
                    必須
                %textarea{:name => "", :class => "description--box", :rows => 7,:placeholder => "商品の説明（必須1,000文字以内）（色、素材、重さ、定価、注意点など  　　　　　例）2010年ごろに1万円で購入したジャケットです。ライトグレーでライトグレーで傷はありません。合わせやすいのでおすすめです。"}
              .style--counter
                %span 0/1000
        %hr.border
        .product
          %p 
            商品の詳細
          .menu
            .menu--body
              %name.detail--category
                .style
                  %label
                    カテゴリー
                  %span.style--tag 
                    必須
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "選択してください", :type => "text", :class => "select--box"}/
          .menu
            .menu--body
              %name.detail--category
                .styleB
                  %label
                    ブランド
                  %span.style--tag 
                    任意
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "シャネル", :type => "text", :class => "select--box"}/
          .menu
            .menu--body
              %name.detail--category
                .style
                  %label
                    商品の状態
                  %span.style--tag 
                    必須
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "選択してください", :type => "text", :value => ""}/
        %hr.border
        .product
          %p 
            配送について
          .menu
            .menu--body
              %name.shipping--payer
                .style
                  %label
                    配送料の負担
                  %span.style--tag 
                    必須
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "選択してください", :type => "text", :value => ""}/
          .menu
            .menu--body
              %name.shipping--payer
                .style
                  %label
                    発送元の地域
                  %span.style--tag 
                    必須
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "選択してください", :type => "text", :value => ""}/
          .menu
            .menu--body
              %name.shipping--payer
                .style
                  %label
                    発送までの日数
                  %span.style--tag 
                    必須  
              .category--select
                .name--area
                  %input{:name => "name", :placeholder => "選択してください", :type => "text", :value => ""}/  
        %hr.border
        .product--bottom
          %p.price--range 
            価格（￥300~9,999,999)
          .price--content
            .price
              %name.price--sale
                .price--box
                  %label
                    販売価格
                    %span.style--tag 
                      必須
                %span
                  ￥
                .price--box__right
                  %input{:name => "price", :placeholder => "0", :type => "number", :value => ""}/
            .price
              .price--fee
                販売手数料(10%)
              %span.fee--value
                ー
            %hr.border--short
            .price
              .price--profit
                販売利益
              %span.fee--value
                ー
            .exibition--bottom
              %button{:name => "price", :placeholder => "0", :type => "number", :value => ""}/